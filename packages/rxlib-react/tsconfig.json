{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "outDir": "lib/esm",
        "declaration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017",
        ],
    },
    "include": [
        "src/**/*.ts*",
    ],
    "exclude": [
        "lib",
        "node_modules",
        "src/**/**/*.stories.tsx",
    ],
}